pipeline {
  agent any
  tools {
    terraform 'Terraform'
  }
  options {
    withAWS(credentials: 'aws', region: 'us-east-2')
  }
  environment {
    AWS_DEFAULT_REGION = 'us-east-2'
  }
  stages {
    stage('Terraform Init') {
      steps {
        sh 'terraform init'
      }
    }
    stage('Terraform Plan') {
      steps {
        sh 'terraform plan'
      }
    }
    stage('Terraform Apply') {
      steps {
          sh 'terraform apply -auto-approve'
      }
    }
  }
}
